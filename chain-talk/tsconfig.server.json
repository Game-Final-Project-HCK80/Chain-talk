{
    "exclude": ["./tsconfig.json"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "strict": true,
        "noEmit": false,
        "isolatedModules": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["server.mts"]
}